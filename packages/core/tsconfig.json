{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "lib",
    "lib": ["esnext"],
    "useDefineForClassFields": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": ["node_modules", "scripts", "test"]
}
