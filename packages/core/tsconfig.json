{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "lib",
    "declarationDir": "lib/typings",
    "useDefineForClassFields": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules", "lib", "scripts"]
}
