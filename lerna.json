{
  "packages": [
    "packages/*"
  ],
  "version": "4.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": [
        "develop",
        "release/*",
        "feature/*",
        "*/*"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
